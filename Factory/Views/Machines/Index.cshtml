@{
  Layout = "_Layout";
}

@using Factory.Models;

<div class="jumbotron">
  <h1>List of Machines</h1>
</div>

@if(Model.Count == 0)
{
  <p>No Machines have been added.</p>
}
<ul>
  @foreach(Machine mach in Model)
  {
    <li>@mach.MachineName | @Html.ActionLink("Details", "Details", new { id = mach.MachineId })</li>
  }
</ul>

<p>@Html.ActionLink("Add a Machine", "Create")</p>
<p>@Html.ActionLink("Home", "Index", "Home")</p>
